@using Assignment_Intership.Models.Task.TaskViewModels
@model TaskEditViewModel

<form method="post">
  <div asp-validation-summary="ModelOnly" class="text-danger"></div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="inputEmail4">Title</label>
      <input type="text" asp-for="Title" class="form-control" id="inputEmail4" value="@Model.Title">
    </div>
    <div class="form-group col-md-6">
      <label for="inputEmail4">Description</label>
      <textarea type="text" asp-for="Description" class="form-control" id="inputEmail4" value="@Model.Description"></textarea>
    </div>
  </div>
  <div class="form-group">
    <label>Assignee</label>
    <select class="form-control" asp-for="EmployeeId" asp-items="Model.Employees" value="@Model.EmployeeId"></select>
  </div>
  <div class="form-group">
    <label for="inputAddress2">Due Date</label>
    <input type="date" asp-for="DueDate" class="form-control" id="inputAddress2" >
  </div>
  <hr />
  <button type="submit" class="btn btn-success" href="/Task/Index">Save</button>
</form>

<partial name="_ValidationScriptsPartial" />