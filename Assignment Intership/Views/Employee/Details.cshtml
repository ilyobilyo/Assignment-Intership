@using Assignment_Intership.Models.Employee.EmployeeViewModels
@model EmployeeDetailsModel

<div class="container mt-4 mb-4 p-3 d-flex justify-content-center">
	<div class="card p-4"> 
			<div class=" image d-flex flex-column justify-content-center align-items-center"> 
				<button class="btn btn-secondary"> 
					<img data-id="@Model.Id"  height="100" width="100" /></button> 
				<h3  class="name mt-3"><strong style="color:#7710a5">Full Name: </strong>@Model.FullName</h3>
				<div class="d-flex flex-row justify-content-center align-items-center gap-2"> 
					<h3 class="idd1"><strong style="color:#7710a5">Email: </strong>@Model.Email</h3> <span><i class="fa fa-copy"></i></span> 
				</div> 
				<div class="text mt-3">
					<h3 ><strong style="color:#7710a5">Monthly Salary:</strong> @Model.MonthlySalary Lv.</h3> 
				</div>
				<div class="d-flex flex-row justify-content-center align-items-center mt-3"> 
					<h3 class="number"><strong style="color:#7710a5">Completed tasks:</strong> @Model.CompletedTasks </h3> 
				</div> 
				<div style="margin-bottom: 15px" class=" px-2 rounded mt-4 date "> 
					<h3 class="join"><strong style="color:#7710a5">Date of Birth:</strong> @Model.DateOfBirth</h3>
				</div>
			<h4 ><strong style="color:#7710a5" >Created At:</strong> @Model.CreatedAt</h4> 
			<h4 ><strong style="color:#7710a5">Updated At:</strong> @Model.UpdatedAt</h4> 
			<h3 ><strong style="color:#7710a5">Emplyee Tasks :</strong></h3> 
			<div style="overflow:auto; width:350px; height:350px;" data-target="#navbar-example2" data-offset="0">
				@foreach (var task in Model.Tasks)
				{
					@if (task.IsCompleted)
					{
						<h4 id="fat" style="color:green">@task.Title</h4>
						<p style="color:green"><i class="fas fa-check"></i> Completed At: @task.CompletedAt</p>
						<hr />
					}
					else
					{
						<h4 id="fat" style="color:red"><i class="fas fa-times-circle"></i> @task.Title</h4>
						<p style="color:red">Not Finished</p>
						<hr />
					}
				}
			</div>
			<div class=" d-flex mt-2"> 
				<a class="btn btn-outline-dark" href="javascript:history.go(-1)">Back</a> 
			</div> 
		</div> 
	</div>
</div>

<script src="~/js/image.js"></script>

